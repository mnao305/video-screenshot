{
  "name": "video-screenshot",
  "description": "Take screenshots of videos such as YouTube and other video sites",
  "version": null,
  "manifest_version": 2,
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "options_ui": {
    "page": "options/index.html",
    "chrome_style": true
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["content/index.js"]
    }
  ],
  "background":{
    "scripts":[
      "background/index.js"
    ],
    "persistent": false
  },
  "permissions": [
    "contextMenus",
    "storage"
  ],
  "commands": {
    "_execute_action": {},
    "shoot": {
      "description": "Take a screenshot"
    }
  }
}